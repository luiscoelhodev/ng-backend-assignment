{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "ESNext"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "skipLibCheck": true, 
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["./src/@types"]
  },
  "include": ["src/**/*"]
}
